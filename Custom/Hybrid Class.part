    <specific name="Short Description"> You swear a holy vow to pursue divine vengeance against all the foes of your faith. </specific>
    <specific name="_ParentClass" />
    <specific name="Trait Package" />
    <specific name="_BaseClass"> ID_FMP_CLASS_129 </specific>
    <rules>
      <grant name="ID_INTERNAL_GRANTS_HYBRID_AVENGER" type="Grants" />
