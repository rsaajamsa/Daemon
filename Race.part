    <specific name="Average Height"> 3'4"-3'8" </specific>
    <specific name="Average Weight"> 40-55 lb. </specific>
    <specific name="Ability Scores"> +2 Dexterity; +2 Wisdom or +2 Charisma </specific>
    <specific name="Languages"> Common, Goblin </specific>
    <specific name="Skill Bonuses"> +2 Bluff, +2 Stealth </specific>
    <specific name="Male Names"> Floo, Grot, Grub, Itch, Rort, Splik, Snag, Splug, Squintch, Zix. </specific>
    <specific name="Female Names"> Borb, Fee, Flert, Gretch, Gyik, Nibb, Nyx, Pinch, Pook, Wort. </specific>
    <specific name="Tribal Names"> Batbiter, Frog-gagger, Grumblegut, Ratskinner, Stinkdrinker. </specific>
    <specific name="Short Description"> Pint sized rascals that infest dungeons the world over, goblins are endlessly curious. </specific>
    <specific name="Racial Traits"> ID_FMP_RACIAL_TRAIT_714, ID_FMP_RACIAL_TRAIT_394 </specific>
